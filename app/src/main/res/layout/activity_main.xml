<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="end"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="50sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="40sp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:text="R"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:textColor="@color/white"
                android:textSize="34sp"
                tools:text="+/-" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/number_seven_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="7"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/number_eight_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/number_nine_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:textSize="34sp"
                tools:text="9" />

            <Button
                android:id="@+id/mutiply_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_200"
                android:textSize="34sp"
                tools:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/number_four_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/number_six_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:backgroundTint="@color/pinky"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
              android:backgroundTint="@color/teal_200"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="C"
                android:backgroundTint="@color/blue_100"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:textSize="34dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_100"
                android:text="."
                android:textColor="@color/white"
                android:textSize="34sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:backgroundTint="@color/pinky"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>